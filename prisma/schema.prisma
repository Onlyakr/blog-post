generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String 
  content   String?
  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int
  createdAt DateTime @default(now())

  @@map("post")
}

model Category {
 id Int @id @default(autoincrement())
 name String
 posts Post[]

 @@map("category")
}
